<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Suite">
	<test name="place order at 3 stops in present and future"
		preserve-order="true">
		<groups>
			<run>
				<include name="Cancel the new Order" />
				<include name="complete the new Order" />
				<include name="complete the Order just after creation" />
				<include name="Complete the order after Completed" />
				<include name="Cancel the Order after Completed" />
				<include name="Cancel the order after cancelled" />
				<include name="Complete the Order after Cancelled" />
				<include name="place order with wrong body" />
			</run>

		</groups>
		<classes>
			<class name="com.nagarro.testCases.TestcasesForOrderPlacedInPresentNFutureTest" />
		</classes>
		</test>
		<test name="place order at more than 3 stops in present and future"
		preserve-order="true">
		<groups>
			<run>
				<include name="Cancel the new Order" />
				<include name="complete the new Order" />
				<include name="complete the Order just after creation" />
				<include name="Complete the order after Completed" />
				<include name="Cancel the Order after Completed" />
				<include name="Cancel the order after cancelled" />
				<include name="Complete the Order after Cancelled" />
				<include name="place order with wrong body" />
			</run>

		</groups>
		<classes>
			<class name="com.nagarro.testCases.TestcasesForMoreThan3StopsInPresentFutureTest" />
		</classes>
	</test>
	<test name="Order Flow Test" preserve-order="true">
		<classes>
			<class name="com.nagarro.testCases.PlaceOrderInPastorWithWrongJsonTest" />
			<class name="com.nagarro.testCases.PlaceOrderWithAllSameStopTest" />
		</classes>
	</test>
</suite>
